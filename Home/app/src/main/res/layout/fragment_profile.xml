<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.Profile.ProfileFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/image_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="fitCenter"/>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/nama_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Faiz Zaki Ramadhan"
        android:textColor="#000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/desc_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Front End Developper"
        android:textColor="#000" />

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutcard1"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@+id/desc_profile"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="22dp">


            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/kbv_location1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/judul1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Nama Lengkap"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.056" />

            <EditText
                android:id="@+id/nama_lengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kbv_location1"
                app:layout_constraintStart_toStartOf="@+id/judul1"
                app:layout_constraintTop_toBottomOf="@+id/judul1"
                app:layout_constraintVertical_bias="0.005" />

            <TextView
                android:id="@+id/judul2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:text="Nama Panggilan"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nama_lengkap"
                app:layout_constraintVertical_bias="0.018" />

            <EditText
                android:id="@+id/nama_panggilan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kbv_location1"
                app:layout_constraintStart_toStartOf="@+id/judul2"
                app:layout_constraintTop_toBottomOf="@+id/judul2"
                app:layout_constraintVertical_bias="0.005" />

            <TextView
                android:id="@+id/judul3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:text="Alamat"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nama_panggilan"
                app:layout_constraintVertical_bias="0.018" />

            <EditText
                android:id="@+id/alamat_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kbv_location1"
                app:layout_constraintStart_toStartOf="@+id/judul3"
                app:layout_constraintTop_toBottomOf="@+id/judul3"
                app:layout_constraintVertical_bias="0.005" />

            <TextView
                android:id="@+id/judul4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:text="Contact Information"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alamat_profile"
                app:layout_constraintVertical_bias="0.018" />

            <TextView
                android:id="@+id/alamat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="E-Mail "
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/no_whatsapp"
                app:layout_constraintStart_toEndOf="@+id/kbv_location1"
                app:layout_constraintStart_toStartOf="@+id/judul4"
                app:layout_constraintTop_toBottomOf="@+id/judul4"
                app:layout_constraintVertical_bias="0.005" />

            <EditText
                android:id="@+id/alamat_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kbv_location1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/judul4"
                app:layout_constraintVertical_bias="0.005" />

            <TextView
                android:id="@+id/alamat6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="WhatsApp "
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kbv_location1"
                app:layout_constraintStart_toStartOf="@+id/alamat4"
                app:layout_constraintTop_toBottomOf="@+id/alamat_email"
                app:layout_constraintVertical_bias="0.005" />

            <TextView
                android:id="@+id/no_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kbv_location1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alamat_email"
                app:layout_constraintVertical_bias="0.005" />

            <TextView
                android:id="@+id/alamat8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Instagram "
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kbv_location1"
                app:layout_constraintStart_toStartOf="@+id/alamat4"
                app:layout_constraintTop_toBottomOf="@+id/no_whatsapp"
                app:layout_constraintVertical_bias="0.005" />

            <EditText
                android:id="@+id/sosmed_ig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kbv_location1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alamat6"
                app:layout_constraintVertical_bias="0.005" />

            <Button
                android:id="@+id/save_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="412dp"
                android:text="Simpan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sosmed_ig" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/save_profile" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tumbal"
        android:layout_marginStart="15dp"
        android:paddingTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutcard1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center"
        android:text="JOIN WITH US" />

    <TextView
        android:id="@+id/tumbal2"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tumbal"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:text="Contact Us"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tumbal3"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tumbal2"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:text="Email" />

    <TextView
        android:id="@+id/tumbal4"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tumbal3"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:text="WhatsApp" />

    <TextView
        android:id="@+id/tumbal5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tumbal4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:text="Our Location"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tumbal6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tumbal5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="-106dp"
        android:foregroundGravity="center"
        android:text=" : myrantangapps@gmail.com"
        app:layout_constraintStart_toEndOf="@+id/tumbal3"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tumbal7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tumbal5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="-66dp"
        android:foregroundGravity="center"
        android:text=" : 08888888888888"
        app:layout_constraintStart_toEndOf="@+id/tumbal4"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/mapppss"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_below="@+id/tumbal5"
        app:layout_constraintTop_toBottomOf="@+id/tumbal5">

        <include layout="@layout/location_fragment" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonShare"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/mapppss"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg"
        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapppss"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tumbal8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButtonShare"
        android:layout_marginTop="50dp"
        android:foregroundGravity="center"
        android:text="HAhahaha" />



</RelativeLayout>

</ScrollView>